<odoo>
    <template
        id="account_invoice_report_hide_triple_disc_by_partner_report_invoice_document"
        name="account.invoice.report.hide.triple.disc.by.partner.report.invoice.document"
        inherit_id="account_invoice_triple_discount.report_invoice_document"
    >
        <xpath expr="//t[@t-set='display_discount1']" position="after">
            <t t-if="display_discount1">
                <t t-set="display_discount1" t-value="o.show_discounts" />
            </t>
        </xpath>
        <xpath expr="//t[@t-set='display_discount2']" position="after">
            <t t-if="display_discount2">
                <t t-set="display_discount2" t-value="o.show_discounts" />
            </t>
        </xpath>
        <xpath expr="//t[@t-set='display_discount3']" position="after">
            <t t-if="display_discount3">
                <t t-set="display_discount3" t-value="o.show_discounts" />
            </t>
        </xpath>
    </template>
    <template
        id="account_invoice_report_hide_triple_disc_by_partner_report_invoice_document_base"
        name="account.invoice.report.hide.triple.disc.by.partner.report.invoice.document.base"
        inherit_id="account_invoice_report_hide_discounts_by_partner.account_invoice_report_hide_discounts_by_partner_report_invoice_document"
    >
        <xpath expr="//span[@t-field='line.price_unit']" position="attributes">
            <attribute name="t-if">o.show_discounts</attribute>
        </xpath>
        <xpath
            expr="//span[@t-field='line.invoice_price_unit_with_discount']"
            position="attributes"
        >
            <attribute name="t-if">not o.show_discounts</attribute>
        </xpath>
    </template>
</odoo>
