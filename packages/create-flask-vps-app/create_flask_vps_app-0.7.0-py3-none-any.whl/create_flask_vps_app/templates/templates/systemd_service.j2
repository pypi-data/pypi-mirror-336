[Unit]
Description=Flask API for {{ app_name }}
After=network.target

[Service]
ExecStart={{ venv_path }}/bin/gunicorn -w 4 -b 0.0.0.0:{{ port }} main:app
WorkingDirectory={{ project_path }}/app
Restart=always
User=www-data
Group=www-data
Environment="PATH={{ venv_path }}/bin"

[Install]
WantedBy=multi-user.target 