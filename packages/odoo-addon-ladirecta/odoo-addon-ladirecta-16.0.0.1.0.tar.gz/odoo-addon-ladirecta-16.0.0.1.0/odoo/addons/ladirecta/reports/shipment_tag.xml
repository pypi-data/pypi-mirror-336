<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="paperformat_shipment_tags" model="report.paperformat">
        <field name="name">Shipment Tags</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="disable_shrinking" eval="True" />
        <field name="dpi">96</field>
    </record>

    <record id="report_shipment_tag" model="ir.actions.report">
        <field name="name">Shipment Tag</field>
        <field name="model">res.partner</field>
        <field name="report_name">ladirecta.shipment_tag_template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_file">ladirecta.shipment_tag_template</field>
        <field name="print_report_name">'Shipment Tag'</field>
        <field name="paperformat_id" ref="ladirecta.paperformat_shipment_tags" />
    </record>

    <template id="shipment_tag_template">
        <t t-call="web.basic_layout">
            <div
                class="page"
                style="display: flex; flex-wrap: wrap; page-break-inside: avoid;"
            >
                <t t-foreach="docs" t-as="partner">
                    <div
                        style="width: 50%; height: 50%; box-sizing: border-box; padding: 1cm; border: 1px solid #000;"
                    >
                        <div style="font-size: 12pt; line-height: 1.5;">
                            <strong><t t-esc="partner.name or ''" /></strong><br />
                            <t t-if="partner.street"><t t-esc="partner.street" /><br
                                /></t>
                            <t t-if="partner.city or partner.zip or partner.state_id">
                                <t t-if="partner.city"><t t-esc="partner.city" />, </t>
                                <t t-if="partner.zip"><t t-esc="partner.zip" /><br
                                    /></t>
                                <t t-if="partner.state_id"><t
                                        t-esc="partner.state_id.name"
                                    /><br /></t>
                            </t>
                            <t t-esc="partner.company_id.correos_image" />
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

</odoo>
