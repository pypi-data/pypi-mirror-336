<record
            id="kpi_department_appraisal_policy_template_detail_cancel"
            model="policy.template_detail"
        >
    <field name="template_id" ref="kpi_department_appraisal_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','kpi.department_appraisal'),('name','=','cancel_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','kpi.department_appraisal'),('value','in',['draft','confirm','open','done'])]"
            />
        <field name="restrict_user" eval="1" />
        <field name="computation_method">use_group</field>
        <field
                name="group_ids"
                eval="[(6,0,[ref('kpi_department_appraisal_user_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>

