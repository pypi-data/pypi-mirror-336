<odoo>
<data noupdate="1">
<record id="kpi_department_appraisal_template" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_kpi_department_appraisal" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','kpi.department_appraisal'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- confirm -->
<record
            id="kpi_department_appraisal_policy_template_detail_confirm"
            model="policy.template_detail"
        >
    <field name="template_id" ref="kpi_department_appraisal_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','kpi.department_appraisal'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','kpi.department_appraisal'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('kpi_department_appraisal_user_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>

