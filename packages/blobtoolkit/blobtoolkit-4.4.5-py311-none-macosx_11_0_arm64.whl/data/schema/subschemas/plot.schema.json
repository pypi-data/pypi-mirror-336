{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "subschema/plot.schema.json",
  "title": "Plot",
  "description": "BlobDir default plot metadata",
  "type": "object",
  "properties": {
    "x": {
      "description": "x axis field ID",
      "type": "string",
      "pattern": "^[A-Za-z0-9_]+$"
    },
    "y": {
      "description": "y axis field ID",
      "type": "string",
      "pattern": "^[A-Za-z0-9_]+$"
    },
    "z": {
      "description": "z axis field ID",
      "type": "string",
      "pattern": "^[A-Za-z0-9_]+$"
    },
    "cat": {
      "description": "Field ID used to assign categories",
      "type": "string",
      "pattern": "^[A-Za-z0-9_]+$"
    }
  }
}
