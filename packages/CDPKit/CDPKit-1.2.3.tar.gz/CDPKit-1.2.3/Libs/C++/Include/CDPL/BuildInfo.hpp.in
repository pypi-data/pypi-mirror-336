/**
 * \file
 * \brief Provides \e %CDPKit build system and build time information.
 */

#ifndef CDPL_BUILDINFO_HPP
#define CDPL_BUILDINFO_HPP

/**
 * \brief An identifier for the compiler that was used to build the \e %CDPL.
 */
#define CDPL_COMPILER_ID      "@CDPKIT_COMPILER_ID@"

/**
 * \brief The version of the compiler that was used to build the \e %CDPL.
 */
#define CDPL_COMPILER_VERSION "@CDPKIT_COMPILER_VERSION@"

/**
 * \brief \e %CDPL build system information.
 */
#define CDPL_BUILD_SYSTEM     "@CDPKIT_BUILD_SYSTEM@"

/**
 * \brief The \e %CDPL build time in the format \e YYYYMMDDHHMM. 
 */
#define CDPL_BUILD_TIME        @CDPKIT_BUILD_TIME@

#endif // CDPL_BUILDINFO_HPP
