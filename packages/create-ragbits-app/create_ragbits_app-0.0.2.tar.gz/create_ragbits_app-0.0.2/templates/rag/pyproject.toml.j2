[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "Repository generated with ragbits"
readme = "README.md"
requires-python = ">={{ python_version }}"
dependencies = [
    "ragbits[qdrant]=={{ ragbits_version }}",
    "pydantic-settings",
    "unstructured[pdf]>=0.17.2",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.metadata]
allow-direct-references = true

[tool.hatch.build.targets.wheel]
packages = ["src/{{pkg_name}}"]
