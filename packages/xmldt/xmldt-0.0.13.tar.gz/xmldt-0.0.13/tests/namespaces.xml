<?xml version="1.0"?>
<?xml-model href="http://dacl.zbr.pt/exist/rest/db/schemas/academia.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<entry xmlns="http://www.tei-c.org/ns/1.0" xmlns:dacl="http://dacl.zbr.pt/annotations"
        xml:id="DLP-era_1-cf5c0" xml:lang="pt">
        <dacl:meta status="validated"/>
        <form><orth>era</orth><pron>ˈɛrɐ</pron></form>
        <gramGrp>n. f.</gramGrp>
        <sense n="1" xml:id="DLP-era_1-cf5c0-3">
                <def>período de tempo que serve de base a um sistema cronológico e principia com uma
                        data memorável, a partir do qual se contam os anos, em sucessão
                        contínua</def>
                <re>
                        <form><orth>era comum</orth></form>
                        <sense>
                                <def>o mesmo que <xr>
                                                <ref type="entry">era cristã</ref>
                                        </xr></def>
                        </sense>
                </re>
                <re>
                        <form><orth>era cristã</orth></form>
                        <sense xml:id="DLP-era_1-cf5c0-1">
                                <def>a que se conta a partir do nascimento de Jesus Cristo</def>
                        </sense>
                </re>
                <re>
                        <form><orth>era de Cristo</orth></form>
                        <sense xml:id="DLP-era_1-cf5c0-2">
                                <def>o mesmo que <xr>
                                                <ref type="entry">era cristã</ref>
                                        </xr></def>
                        </sense>
                </re>
                <re>
                        <form><orth>era hispânica</orth></form>
                        <sense xml:id="DLP-era_1-cf5c0-15">
                                <def>a que inicia 38 anos antes da era cristã, assinalando a
                                        conquista romana da Península Ibérica</def>
                                <note type="enciclopedic">Usada em Portugal até 1422.</note>
                        </sense>
                </re>
                <re>
                        <form><orth>era muçulmana</orth></form>
                        <sense xml:id="DLP-era_1-cf5c0-16">
                                <def>a que inicia o calendário islâmico e que corresponde ao ano 622
                                        da era cristã, assinalando a data da fuga do profeta Maomé
                                        de Meca para Medina (Hégira)</def>
                        </sense>
                </re>
        </sense>
        <sense n="2" xml:id="DLP-era_1-cf5c0-5">
                <def>início de uma nova ordem de coisas</def>
                <cit type="example">
                        <quote type="example">Entrámos numa nova era de maior justiça e
                                liberdade.</quote>
                </cit>
                <cit type="example">
                        <quote type="combinacao_frequente"><hi>era atómica; era da informação; era
                                        digital; era do fogo; era dos computadores; era
                                        espacial</hi></quote>
                </cit>
        </sense>
        <sense n="3" xml:id="DLP-era_1-cf5c0-7">
                <def>qualquer período cronológico demarcado</def>
                <xr type="synonymy">
                        <ref type="entry">época</ref>
                </xr>
                <xr type="synonymy">
                        <ref type="entry">tempo</ref>
                </xr>
                <re>
                        <form><orth>era dos afonsinhos</orth></form>
                        <sense xml:id="DLP-era_1-cf5c0-6">
                                <def>tempos antiquados, desatualizados</def>
                                <xr type="synonymy">
                                        <ref type="entry">tempo dos afonsinhos</ref>
                                </xr>
                                <note type="use">Por alusão irónica aos tempos em que reinaram os
                                        primeiros Afonsos de Portugal.</note>
                        </sense>
                </re>
        </sense>
        <sense n="4" expertValidated="2021-11-27" xml:id="DLP-era_1-cf5c0-12">
                <usg type="domain">Geol.</usg>
                <def>intervalo de tempo geológico (<xr>
                                <ref type="entry">unidade geocronológica</ref>
                        </xr>) durante o qual se formou um eratema (<xr>
                                <ref type="entry">unidade cronostratigráfica</ref>
                        </xr>)</def>
                <note type="enciclopedic">1) Na escala do tempo geológico, a era é hierarquicamente
                        superior ao período e inferior ao éon. 2) A era integra vários
                        períodos.</note>
                <re>
                        <form><orth>era primária</orth></form>
                        <sense n="1" xml:id="DLP-era_1-cf5c0-8">
                                <usg type="domain">Geol.</usg>
                                <usg type="register">Obsol.</usg>
                                <def>designação da era paleozoica</def>
                                <xr type="synonymy">
                                        <ref type="entry">primário</ref>
                                </xr>
                        </sense>
                        <sense n="2" xml:id="DLP-era_1-cf5c0-11">
                                <usg type="domain">Geol.</usg>
                                <def>o mesmo que <xr>
                                                <ref type="entry">paleozoico</ref>
                                        </xr></def>
                        </sense>
                </re>
                <re>
                        <form><orth>era quaternária</orth></form>
                        <sense n="1" xml:id="DLP-era_1-cf5c0-9">
                                <usg type="domain">Geol.</usg>
                                <usg type="register">Obsol.</usg>
                                <def>designação da antiga era antropozoica</def>
                                <xr type="synonymy">
                                        <ref type="entry">antropozoico</ref>
                                </xr>
                                <xr type="synonymy">
                                        <ref type="entry">quaternário</ref>
                                </xr>
                        </sense>
                        <sense n="2" xml:id="DLP-era_1-cf5c0-13">
                                <usg type="domain">Geol.</usg>
                                <def>o mesmo que <xr>
                                                <ref type="entry">quaternário</ref>
                                        </xr> (atualmente ‘sistema/período’)</def>
                        </sense>
                </re>
                <re>
                        <form><orth>era secundária</orth></form>
                        <sense n="1" xml:id="DLP-era_1-cf5c0-10">
                                <usg type="domain">Geol.</usg>
                                <usg type="register">Obsol.</usg>
                                <def>designação da era mesozoica</def>
                                <xr type="synonymy">
                                        <ref type="entry"><usg type="geographic">Brasil</usg>secundário</ref>
                                </xr>
                        </sense>
                        <sense n="2" xml:id="DLP-era_1-cf5c0-14">
                                <usg type="domain">Geol.</usg>
                                <def>o mesmo que <xr>
                                                <ref type="entry">mesozoico</ref>
                                        </xr></def>
                        </sense>
                </re>
                <re>
                        <form><orth>era terciária</orth></form>
                        <sense n="1" xml:id="DLP-era_1-cf5c0-18">
                                <usg type="domain">Geol.</usg>
                                <usg type="register">Obsol.</usg>
                                <def>designação da era cenozoica</def>
                                <xr type="synonymy">
                                        <ref type="entry">terciário</ref>
                                </xr>
                        </sense>
                        <sense n="2" xml:id="DLP-era_1-cf5c0-17">
                                <usg type="domain">Geol.</usg>
                                <def>o mesmo que <xr>
                                                <ref type="entry">cenozoico</ref>
                                        </xr></def>
                        </sense>
                </re>
        </sense>
        <sense n="5" xml:id="DLP-era_1-cf5c0-19">
                <def>numeração que indica um ano ou um certo número de anos</def>
                <cit type="example">
                        <quote type="example">a era de 74 (1974); a era dos anos 90 (1990)</quote>
                </cit>
        </sense>
        <sense n="6" xml:id="DLP-era_1-cf5c0-20">
                <usg type="geographic">Bras.</usg>
                <def>idade; número de anos</def>
                <cit type="example">
                        <quote type="example">Estes miúdos são da mesma era.</quote>
                </cit>
        </sense>
        <etym>Do latim <cit type="etymon"><form><orth xml:lang="la">aera</orth></form></cit></etym>
        <etym>Do latim <cit type="etymon"><form><orth><foo/>aera</orth></form>
                </cit></etym>        
</entry>
