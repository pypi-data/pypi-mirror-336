{
    "preprocessing": {
        "data_path": "training_data_extended.csv",
        "output_path": "preprocessed_data.csv",
        "n_samples": 1000,
        "random_state": 42,
        "test_size": 0.2,
        "morgan_radius": 2,
        "morgan_nBits": 1024,
        "feature_selection": true,
        "correlation_threshold": 0.98,
        "standardize": true
    },
    "training": {
        "data_path": "preprocessed_data.csv",
        "model_dir": "models",
        "results_dir": "results",
        "checkpoints_dir": "checkpoints",
        "use_gpu": false,
        "validation_split": 0.2,
        "random_state": 42,
        "target_columns": ["displacement_count", "final_molecules"],
        "cross_validation": {
            "n_splits": 5,
            "shuffle": true
        },
        "early_stopping_rounds": 50,
        "hyperparameter_optimization": {
            "n_trials": 50,
            "search_space": {
                "learning_rate": {"min": 0.001, "max": 0.1, "log": true},
                "max_depth": {"min": 3, "max": 10, "step": 1},
                "min_child_weight": {"min": 1, "max": 7, "step": 1},
                "subsample": {"min": 0.6, "max": 1.0},
                "colsample_bytree": {"min": 0.6, "max": 1.0},
                "gamma": {"min": 0, "max": 5},
                "reg_alpha": {"min": 0, "max": 5},
                "reg_lambda": {"min": 0, "max": 5}
            }
        }
    },
    "prediction": {
        "model_path": "models/xgboost_model_latest.json",
        "batch_size": 32,
        "output_dir": "predictions",
        "confidence_interval": 0.95,
        "save_results": true
    },
    "visualization": {
        "output_dir": "visualization_results",
        "dpi": 300,
        "figsize": [10, 8],
        "save_format": "png"
    }
} 