[flake8]
max-line-length = 100
extend-ignore =
    E203,
    W503,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D107,
    D200,
    D205,
    D400,
    D401,
    F401,
    F841
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
